<%- include('../includes/header') %>
<%- include('../includes/navbar', { activePage: 'Configuration' }) %>
<%- include('../includes/configNav', { activePage }) %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Project Configuration</h1>
            <p>
                This page allows you to update, delete this current project and merge projects to the Njobvu AI platform.
            </p>
            <hr>
        </div>
    </div>
    <div>
        <h3>Update Project Information</h3>
        <form class="update-project-form" action ="/updateProject" method="POST" enctype="multipart/form-data" id="updateProjectForm">
            <input type="hidden" name="PName" value="<%= PName %>">
            <input type="hidden" name="Admin" value="<%= Admin %>">
            <input type="hidden" name="IDX" value="<%= IDX %>">
            <div class="mb-3">
                <p for="update-project-name" class="form-label">Update Project Title:</p>
                <input class="form-control" id="update-project-name" placeholder="<%= PName %>">
            </div>
            <div class="mb-3">
                <p for="Update-project-description" class="form-label">Update Project Description:</p>
                <!-- <textarea class="form-control" id="Update-project-description" rows="3"><%= PDescription %></textarea> -->
                <textarea name="project_description" class="form-control" id="Update-project-description" rows="3" required><%= PDescription %></textarea>
            </div>
            <div>
                <% if(user == Admin) {%>
                    <button class="btn btn-primary" type="submit">Save Update's</button>
                <%}else {%>
                    <a href="#" role="button" class="btn btn-primary disabled" value="Delete Project" style="border-radius: 0">Save</a>
                <%}%>
            </div>
        </form>
        <hr>
    </div>
    <div>
        <h3>Delete Project</h3>
        <form action="/deleteProject" method="post" id="submit-delete-project">
            <input type="hidden" name="PName" value="<%= PName %>">
            <input type="hidden" name="Admin" value="<%= Admin %>">
            <input type="hidden" name="IDX" value="<%= IDX %>">
            <p>If you want to delete this project, click the button below. This project will be deactivated <strong>permanently</strong>.</p>
                <% if(user == Admin) {%>
                    <button class="btn btn-danger" type="submit">Delete Project</button>
                <%}else {%>
                    <a href="#" role="button" class="btn btn-danger disabled" value="Delete Project" style="border-radius: 0">Delete Project</a>
                <%}%>
        </form>
    </div>
</div>

